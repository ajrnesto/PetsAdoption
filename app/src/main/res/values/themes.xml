<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PetsAdoption" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/green_olive</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mint</item>
        <item name="colorSecondaryVariant">@color/mint</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/green_light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowBackground">@color/gray_light</item>
        <!-- Customize your theme here.
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item> -->
    </style>
</resources>