<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PetsAdoption.Button" parent="Widget.Material3.Button">
        <item name="fontFamily">@font/plusjakartasans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">@color/green_light</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="PetsAdoption.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="fontFamily">@font/plusjakartasans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="iconTint">@color/green_olive</item>
        <item name="colorPrimary">@color/green_olive</item>
        <item name="strokeColor">@color/green_olive</item>
    </style>

    <style name="PetsAdoption.Button.Icon" parent="Widget.Material3.Button.IconButton">
        <item name="iconSize">14dp</item>
        <item name="fontFamily">@font/plusjakartasans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="iconTint">@color/green_olive</item>
        <item name="colorPrimary">@color/green_olive</item>
        <item name="strokeColor">@color/green_olive</item>
        <item name="android:backgroundTint">@color/green_light</item>
    </style>

    <style name="PetsAdoption.Button.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/yellow</item>
        <item name="fontFamily">@font/plusjakartasans_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>